<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="poker.PokerGame" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="poker.EvaluationHandler" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="poker.RobotPlayer" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="poker.Player" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="poker.Dealer" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="poker.Pot" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="poker.PotHandler" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="poker.BetManager" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>

    </Loggers>

</Configuration>